<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/adapter_answer_height"
    android:layout_marginLeft="@dimen/adapter_answer_margin_left"
    android:layout_marginRight="@dimen/adapter_answer_margin_right"
    android:layout_marginTop="@dimen/adapter_answer_margin_top"
    android:layout_marginBottom="@dimen/adapter_answer_margin_bottom"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_adapter_answer_number"
            android:layout_width="@dimen/adapter_answer_number_width"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textview_adapter_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_answer_divider_height"
        android:background="@android:color/black"
        android:layout_gravity="bottom"/>


</FrameLayout>